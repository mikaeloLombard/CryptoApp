@model CryptoApp.Models.WalletUsers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-success">Create</h1>

<h4 class="text-success">Wallet Users</h4>
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">ID</div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicAdress" class="control-label">Wallet P.A.</label>
                <input asp-for="PublicAdress" class="form-control" />
                <span asp-validation-for="PublicAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberTransactions" class="control-label">Number of Transactions</label>
                <input asp-for="NumberTransactions" class="form-control" />
                <span asp-validation-for="NumberTransactions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuiltDate" class="control-label">Date Created</label>
                <input asp-for="BuiltDate" class="form-control" />
                <span asp-validation-for="BuiltDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ActiveInactive" /> Status Active/Inactive
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



