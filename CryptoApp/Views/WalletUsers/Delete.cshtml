@model CryptoApp.Models.WalletUsers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-success">Delete</h1>

<h3 class="display-4 text-danger">Are you sure you want to delete this?</h3>
<div>
    <h4 class="display-4 text-success">WalletUsers</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Wallet P.A.
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicAdress)
        </dd>
        <dt class="col-sm-2">
            Number of Transactions
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberTransactions)
        </dd>
        <dt class="col-sm-2">
            Date Created
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuiltDate)
        </dd>
        <dt class="col-sm-2">
            Active/Inactive
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActiveInactive)
        </dd>
    </dl>

    <form asp-action="DeletePost">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
<br />